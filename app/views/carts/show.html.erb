<% if notice != nil%>
<p id="notice"><%= notice %></p>
<% end%>

<h2> Your pragmatic cart </h2>

<ul>
    <% for item in @cart.line_items %>
       <li><%= item.quantity %> &times; <%= item.product.title %></li>
    <% end %>
</ul>
<%= button_to 'Empty cart', @cart, :method => :delete,:confirm => 'Are you sure?' %>

